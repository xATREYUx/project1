
<table class="table table-striped table-bordered">

  <thead>
      <th >#</th>
      <th >Date</th>
      <th >Client</th>
      <th >Task</th>
      <th >Time</th>
  </thead>
  <tbody>
    <tr  scope="row">
      <th ><%= @task.id %></th>
      <td ><%= @taskdate.strftime("%m/%d/%Y") %></td>
      <td ><%= @task.client%></td>
      <td ><%= @task.task %></td>
      <td ><%= @task.timebilled %></td>
    </tr>
    <tr scope="row">
      <td ></td>
      <td ><div class="btn-group" role="group" >
      <%= link_to 'Edit', edit_task_path(@task.id), class: "btn btn-info btn-sm" %>
      <%= link_to 'Delete', @task, :method => :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
      <td>Notes: <%= @task.notes %></td>
      <td ></td>
    </tr>
</div>

  </tbody>
</table>
