<div><%= link_to "All Tasks", tasks_path %></div>

  <%= form_with(model: task, local: true) do |f| %>
    <div class="row">
          <div class="col-1">
            <%= f.label :date %>
          </div>
          <div class="col-3">
            <%= f.date_field :date, id: "flatpickr-input", data: {readonly: ""} %>
          </div>
          <div class=" col-1">
            <%= f.label :client %>
          </div>
          <div class=" col-3">

            <%= f.select :client, options_for_select(@allclients.collect{|p| [ p.client_name, p.client_name ] }) %>
          </div>
          <div class=" col-1">
            <%= f.label :timebilled %>
          </div>
          <div class=" col-3">
            <%= f.text_field :timebilled, size: "5" %>
          </div>
    </div>

    <div class="row">
        <div class="col-10">
          <%= f.label :task %>
          <%= f.text_area :task, class: "form-control", rows: "2" %>
        </div>
        <div class="col-10">
          <%= f.label :notes %>
          <%= f.text_area :notes, class: "form-control", rows: "4"%>
        </div>
    </div>
      <div class="row">
            <%= f.submit %>
              <% if task.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>
              <ul>
              <% task.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
              <% end %>
        <% end %>
      </div>
