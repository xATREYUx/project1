<h1>Advanced Search</h1>

<%= form_for @search do |f| %>
  <div class="field">
    <%= f.label :keywords %><br />
    <%= f.text_field :keywords %>
  </div>
  <!-- <div class="field">
    <%= f.label :task_id %><br />
    <%= f.collection_select :task_id, Task.order(:client), :id, :client, include_blank: true %>
  </div> -->
  <div class="field">
    <%= f.label :date, "Date Range" %><br />
    <%= f.date_field :date_from, size: 10 %> -
    <%= f.date_field :date_to, size: 10 %>
  </div>
  <div class="actions"><%= f.submit "Search" %></div>
<% end %>
