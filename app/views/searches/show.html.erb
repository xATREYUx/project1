<h1>Search Results</h1>
<h3><%=@search_params.keywords%></h3>
<h3><%=@search_params.date_from%></h3>
<h3><%=@search_params.date_to%></h3>
<%= link_to "Search", new_search_path, class: 'btn btn-primary btn-sm'%>
<%= link_to "New Task", new_task_path, class: 'btn btn-primary btn-sm' %>
<%= link_to "All Tasks", tasks_path, class: 'btn btn-primary btn-sm' %>

<table class="table table-striped table-bordered">

  <thead>
      <th >Date</th>
      <th >Task</th>
      <th >Time</th>
  </thead>
   <tbody>
     <% @search.tasks.each do |task| %>
    <tr  scope="row">
      <!-- <th ><%# task.id %></th> -->
      <td ><%= task.date.strftime("%m/%d/%Y") %></td>
      <td ><%= task.task %></td>
      <td ><%= task.timebilled %></td>
    </tr>
